<body class="nav-fixed">
    <nav class="topnav navbar navbar-expand shadow justify-content-between justify-content-sm-start navbar-light bg-white" id="sidenavAccordion">
        <!-- Sidenav Toggle Button-->

        <button class="btn btn-icon btn-transparent-dark order-1 order-lg-0 me-2 ms-lg-2 me-lg-0" id="sidebarToggle" style="border-radius:50%!important;">
            <i class="navbar-toggler-icon" data-feather="menu"></i>
        </button>
        <!-- Navbar Brand-->

        <a class="navbar-brand pe-3 ps-4 ps-lg-2" href="index.html">ĐẠI HỌC HỒNG ĐỨC</a>
        @*<form class="form-inline me-auto d-none d-lg-block me-3">
                <div class="dropdown-user-details-name">Thí sinh: Hoàng Việt Anh</div>
            </form>*@
        <!-- Navbar Items-->
        <ul class="navbar-nav align-items-center ms-auto">
            <li class="nav-item dropdown no-caret dropdown-user me-3 me-lg-4">
                <a class="btn btn-icon btn-transparent-dark dropdown-toggle" style="border-radius:50px!important" id="navbarDropdownUserImage" href="javascript:void(0);"
                   role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img class="img-fluid" src="~/Content/images/profile-1.png" />
                </a>
                <div class="dropdown-menu dropdown-menu-end border-0 shadow animated--fade-in-up" aria-labelledby="navbarDropdownUserImage">

                    <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">
