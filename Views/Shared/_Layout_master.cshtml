                            Kết quả dự tuyển
                        </a>*@
                        <a class="nav-link" href="@Url.Action("HdSD", "HocVienDangKies")">
                            <div class="nav-link-icon"><i data-feather="globe"></i></div>
                            Hướng dẫn sử dụng
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
