<script>
    $(document).ready(function () {
        $('body').keypress(function (event) {
            if (event.keyCode == 13) {
                $('#bt_login').click();
            }
        });
    })
    $(document).ready(function () {
        $('input[type="radio"]').on('click', function (event) {
            $('#errorMessage').text("");
            $('#login_CCCD_Error').text("");
            $('#login_password_Error').text("");
        });

        function rearrangePanels() {
            var windowWidth = $(window).width();
            if (windowWidth < 992) {
                $("#panelContainer").prepend($("#rightPanel"));
                $("#leftPanel").addClass("mt-3");
                $("#h_tieude_trai").addClass("letterspacing");
            } else {
                $("#panelContainer").prepend($("#leftPanel"));
                $("#leftPanel").removeClass("mt-3");
                $("#h_tieude_trai").removeClass("letterspacing");
            }
        }
        rearrangePanels();
        $(window).resize(rearrangePanels);
    })

    $(document).ready(function () {
        $('#showSignupColleger').click(function () {
            $('#bt_cancel_modal_tb_second').hide();
            $('#bt_ok_modal_tb').text('Đóng');
            //$('#span_noidung_thongbao').text('Đã hết thời gian, hệ thống tạm dừng đăng ký dự tuyển đại học');
            //$('#modal_tb').modal('show');
            window.location.href = '/Auth/RegisterColleger/';
        })
       
        $('#showSignupMaster').click(function () {
            window.location.href = '/Auth/RegisterMaster/';
        })

        $('#bt_ok_modal_tb').click(function () {
            $('#modal_tb').modal('hide');
        })
        $('#bt_cancel_modal_tb_first').click(function () {
            $('#modal_tb').modal('hide');
        })
        $('#showSignupLienCap').click(function () {
            $('#bt_cancel_modal_tb_second').hide();
            $('#bt_ok_modal_tb').text('Đóng');
            //$('#span_noidung_thongbao').text('Đã hết thời gian, trường liên cấp tạm dừng đăng ký dự tuyển');
            //$('#modal_tb').modal('show');
            window.location.href = '/LienCapTHCS/index/';
        })
    })

    function submitForm() {

        $(".text-danger").text('');
        let cccd = $("#login_CCCD").val();
        let password = $("#login_password").val();

        if (!cccd) {
            var errorMessage = "Vui lòng nhập CCCD";
            $('#login_CCCD_Error').text(errorMessage);
        }
        if (!password) {
            var errorMessage = "Vui lòng nhập mật khẩu";
            $('#login_password_Error').text(errorMessage);
        }
        if (!cccd || !password) return;

        let formData = {
            cccd: cccd,
            password: password
        }
        if (!$('#radioDaiHoc').is(':checked') && !$('#radioSauDaiHoc').is(':checked')) {
            $('#errorMessage').text('Chọn hệ dự tuyển đăng nhập');
            return;
        }
        else {
            // đăng nhập khi là thí sinh đăng ký xét tuyển đại học
            if ($('#radioDaiHoc').is(':checked')) {
                $.ajax({
                    url: "/Auth/LoginColleger",
                    type: "POST",
                    data: JSON.stringify(formData),
                    contentType: "application/json;charset=utf-8",
                    success: function (res) {
                        if (res.success) {
                            window.location.href = '/ThiSinhDangKies/Index';
                        } else {
                            $('#errorMessage').text(res.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                    }
                });
            }
            // đăng nhập khi là học viên đăng ký sau đại học
            else if ($('#radioSauDaiHoc').is(':checked')) {
                $.ajax({
                    url: "/Auth/LoginMaster",
                    type: "POST",
                    data: JSON.stringify(formData),
                    contentType: "application/json;charset=utf-8",
                    success: function (res) {
                        if (res.success) {
                            window.location.href = '/HocVienDangKies/HvThongTin';
                        } else {
                            $('#errorMessage').text(res.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                    }
                });
            }
        }

    }


    function hideErrorMessage(input) {
        var errorContainer = input.next('.text-danger');
        errorContainer.text('');
    }
    function showToast(title, message, bgColor) {
        $("#myToast .toast-header .me-auto").text(title);
        $("#myToast .toast-body").text(message);
        $("#myToast .toast").removeClass("bg-success bg-danger").addClass(bgColor);
        $("#myToast").toast("show");
    }
</script>
