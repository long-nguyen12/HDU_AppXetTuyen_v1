            $('#Nganh_ID_Error').text(errorMessage);
            flag = false;
        } 
        if (!Dkxt_MonDatGiai_Value || Dkxt_MonDatGiai_Value == "0") {
            var errorMessage = "Vui lòng chọn môn đạt giải";
            $('#Dkxt_MonDatGiai_Error').text(errorMessage);
            flag = false;
        }
        if (!Dkxt_LoaiGiai_Value || Dkxt_LoaiGiai_Value == "0") {
            var errorMessage = "Vui lòng chọn loại giải";
            $('#Dkxt_LoaiGiai_Error').text(errorMessage);
            flag = false;
        }
        if (!Dkxt_NamDatGiai) {
            var errorMessage = "Vui lòng nhận năm đạt giải";
            $('#Dkxt_NamDatGiai_Error').text(errorMessage);
            flag = false;
        } else if (!Dkxt_NamDatGiai.trim()) {
            var errorMessage = "Vui lòng chọn ngành";
            $('#Nganh_ID_Error').text(errorMessage);
            flag = false;
        }
        if (!flag) return;
        $("#loadingModal").modal("show");
        uploadFiles();
        let formData = {
            Nganh_ID: Nganh_ID,
            Dkxt_MonDatGiai: Dkxt_MonDatGiai,
            Dkxt_LoaiGiai: Dkxt_LoaiGiai,
