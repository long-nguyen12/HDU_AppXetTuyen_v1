@model HDU_AppXetTuyen.Models.AdminAccount
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin_auth.cshtml";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container-xl px-4">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header justify-content-center text-center">
                                <h4>Hệ thống quản lý hồ sơ xét tuyển</h4>
                            </div>
                            <div class="card-body">
                                <!-- Login form-->
                                @using (Html.BeginForm("Login", "AdminAuth", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="mb-3">
                                        <label class="small mb-1" for="Admin_Username">Tên đăng nhập</label>
                                        @Html.EditorFor(model => model.Admin_Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên đăng nhập" } })
                                        @Html.ValidationMessageFor(model => model.Admin_Username, "", new { @class = "small mb-1 text-danger" })
                                    </div>
                                    <div class="mb-3" style="margin-top:5px">
                                        <label class="small mb-1" for="Admin_Pass">Mật khẩu</label>
                                        @Html.EditorFor(model => model.Admin_Pass, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mật khẩu", type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Admin_Pass, "", new { @class = "small mb-1 text-danger" })
                                    </div>
                                    <div>
                                        @{
                                            if (ViewBag.LoginErrorMessager != null)
                                            {
                                                <label class="small mb-1 text-danger" name="error_login" id="error_login">@ViewBag.LoginErrorMessager</label>
                                            }
                                        }
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center mt-4 mb-0">
                                        <input class="btn btn-primary" type="submit" value="Đăng nhập" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/Scripts/scripts.js"></script>
@Scripts.Render("~/bundles/jqueryval")
