@model IEnumerable<HDU_AppXetTuyen.Models.DotXetTuyen>

@{
    ViewBag.Title = "QLDotDuTuyenSDH";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin_Master.cshtml";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <div class="page-header-title  mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        <span>Quản lý đợt tuyển sinh</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid px-12">
    <div class="card card-collapsable mt-1 mb-1">
        <div class="card-header">
            <div><span id="sp_tieude">Danh sách các đợt tuyển sinh</span></div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12 col-12">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NamHoc_ID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Dxt_Ten)
                                    </th>
                                    <th>

                                        @Html.DisplayNameFor(model => model.Dxt_TrangThai_Xt)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Dxt_ThoiGian_BatDau)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Dxt_ThoiGian_KetThuc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Dxt_GhiChu)
                                    </th>
                                    <th> @Html.ActionLink("Thêm mới", "QLDotDuTuyenSDH_Add", "HocVienDangKys")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NamHoc.NamHoc_Ten)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dxt_Ten)
                                        </td>
                                        <td>
                                            @{
                                                if (item.Dxt_TrangThai_Xt == 1){ @Html.DisplayName("Mở khóa"); }
                                                if (item.Dxt_TrangThai_Xt == 0){ @Html.DisplayName("Đã khóa");  }
                                            }
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dxt_ThoiGian_BatDau)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dxt_ThoiGian_KetThuc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dxt_GhiChu)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.Dxt_ID }) |
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.Dxt_ID })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
