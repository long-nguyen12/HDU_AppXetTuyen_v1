@*@model IEnumerable<HDU_AppXetTuyen.Models.LienCapTHCS>*@
<!-- Thêm thư viện -->
@model PagedList.IPagedList<HDU_AppXetTuyen.Models.LienCapTHCS>
@using PagedList.Mvc;
<!-- Kết thúc-->
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<style>
    th, td {
        white-space: nowrap;
    }

    .bt-hs {
        width: 80px;
    }

    .bd-rd {
        border-radius: 0px !important;
    }

    .p-mg {
        margin: 0px !important;
    }
</style>

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <div class="page-header-title  mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        <span>Quản lý học sinh đăng ký dự tuyển trường liên cấp THCS</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid px-12">
    <div class="card card-collapsable mt-1 mb-1">
        <div class="card-header">
            <div><span id="sp_tieude">Danh sách học sinh đăng ký</span></div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("DkxtTt", "DangKyXetTuyens", FormMethod.Get))
            {
                <div class="row g-1">
                    <div class="col-xxl-1 col-md-12">
                            @Html.DropDownList("filteriDotxt", null, new { @class = "form-select form-select-sm bd-rd" })
                        </div>
                        <div class="col-xxl-1 col-md-12">
                            @Html.DropDownList("filteriNvong", null, "N.vọng...", new { @class = "form-select form-select-sm bd-rd" })
                        </div>
                        <div class="col-xxl-2 col-md-12">
                            @Html.DropDownList("filteriNganh", null, "Ngành...", new { @class = "form-select form-select-sm bd-rd" })
                        </div>
                        <div class="col-xxl-2 col-md-12">
                            @Html.DropDownList("filteriLePhi", null, "Theo dõi lệ phí...", new { @class = "form-select form-select-sm bd-rd" })
                        </div>
                        <div class="col-xxl-2 col-md-12">
                            @Html.DropDownList("filteriHoSo", null, "Theo dõi hồ sơ...", new { @class = "form-select form-select-sm bd-rd" })
                        </div>
                        <div class="col-xxl-2 col-md-12">
                            @Html.TextBox("searchString", ViewBag.SearchString as string, new { @class = "form-control form-control-sm bd-rd", @placeholder = "Nhập từ khóa..." })
                        </div>
                    <div class="col-xxl-2 col-xl-12">
                        <div class="d-inline-flex flex-nowrap align-items-center">
                            <button class="btn btn-outline-primary bd-rd btn-sm" id="bt_search" style="margin-right:4px">Lọc</button>
                            <a class="btn btn-outline-secondary bd-rd  btn-sm" id="bt_reset" href="@Url.Action("Dkdttnk", "DangKyXetTuyens")" style="padding-right: 6px; padding-left: 6px; margin-right:4px">Tải lại</a>
                            <a class="btn btn-outline-primary bd-rd  btn-sm" id="bt_reset" href="#" style="padding-right:6px; padding-left:6px">Xuất excel</a>
                        </div>
                    </div>
                    <hr class="mt-3 mb-2" />
                </div>
            }

            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Thông tin HS")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Thông tin điểm")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Tổng điểm")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Thông phụ huynh")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Trạng thái")
                                    </th>
                                    <th style="width:100px">
                                        @Html.DisplayName("Cập nhật")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <p class="p-mg">- Mã ĐD: 038215000012</p>
                                            <p class="p-mg">- Họ tên: @item.HocSinh_HoTen</p>
                                            @{ if (@item.HocSinh_GioiTinh == 0)
                                                {<p class="p-mg">- Giới tính: Nam</p>}
                                                else
                                                {<p class="p-mg">- Giới tính: Nữ</p>}}
                                            <p class="p-mg">- Ngày sinh:  @item.HocSinh_NgaySinh</p>
                                            <p class="p-mg">- Diện ưu tiên: Không</p>

                                        </td>
                                        <td>
                                            <p class="p-mg">- Điểm Toán: @item.Monhocs.Toan </p>
                                            <p class="p-mg">- Điểm Tiếng việt: @item.Monhocs.TiengViet</p>
                                            <p class="p-mg">- Điểm Tự nhiên và KH/XH: @item.Monhocs.TuNhien</p>
                                            <p class="p-mg">- Điểm Lịch sử và Địa lý: @item.Monhocs.LichSuDiaLy</p>
                                            <p class="p-mg">- Điểm Tiếng Anh: @item.Monhocs.TiengAnh</p>
                                        </td>
                                        <td style="vertical-align:middle">
                                            @*<p class="p-mg">@item.Monhocs.Toan + @item.Monhocs.TiengViet + @item.Monhocs.TuNhien + @item.Monhocs.LichSuDiaLy + @item.Monhocs.TiengAnh </p>*@
                                            @Html.DisplayFor(mdit => item.TongDiem)
                                        </td>
                                        <td>
                                            <p class="p-mg">- Họ tên bố: @item.PhBo.HoTen </p>
                                            <p class="p-mg">- Điện thoại: @item.PhBo.SoDienThoai</p>
                                            <p class="p-mg">- Họ tên mẹ: @item.PhMe.HoTen</p>
                                            <p class="p-mg">- Điện thoại: @item.PhMe.SoDienThoai</p>
                                        </td>
                                        <td>
                                            <a class="btn  btn-outline-success btn-sm" href="@Url.Action("Details", "LienCapTHCS", new { id = item.HocSinh_ID })">Đã kiểm tra</a>
                                        </td>
                                        <td style="white-space:nowrap">
                                            <a href="@Url.Action("Edit","LienCapTHCS" , new { id = item.HocSinh_ID })" title="Xem chi tiết thông tin thí sinh"><i data-feather="list" style="vertical-align: middle !important "></i></a> |
                                            <a href="@Url.Action("Details","LienCapTHCS" , new { id = item.HocSinh_ID })" title="Chỉnh sửa thông tin thí sinh tin thí sinh"><i data-feather="edit" style="vertical-align: middle !important "></i></a> |
                                            <a href="@Url.Action("Delete","LienCapTHCS" , new { id = item.HocSinh_ID })" title="Xóa thông tin thí sinh"><i data-feather="trash-2" style="vertical-align:middle!important" disable></i></a>
                                        </td>                                      
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- Thêm mã phân trang -->
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                        @Html.PagedListPager(Model, page => Url.Action("Index",
                            new { page }))
                        <!-- Kết thúc -->
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
