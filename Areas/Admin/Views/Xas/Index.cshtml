<!-- Thêm thư viện -->
@model PagedList.IPagedList<HDU_AppXetTuyen.Models.Xa>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <div class="page-header-title  mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        <span>Quản lý thông tin Phường/ Xã</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-fluid px-12">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-header-actions mt-1 mb-1 ">
                <div class="card-header">
                    <span>Danh sách các Phường/ Xã</span>
                    @*<select class="form-select form-select-sm" style="min-width:150px!important; max-width:250px">
                        <option>Phường Đông Vệ</option>
                        <option>Phường Quảng Thắng</option>
                    </select>*@
                    <a class="btn btn-outline-primary btn-sm align-items-center" href="@Url.Action("Create", "Xas")"> + Thêm mới</a>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover m-0 mb-2">
                        <thead>
                            <tr>
                                <th>@Html.DisplayName("Tên huyện") </th>
                                <th>@Html.DisplayName("Tên xã") </th>
                                <th>@Html.DisplayName("Mã xã") </th>
                                <th>@Html.DisplayName("Ghi chú")</th>
                                <th style="width:90px; text-align:center">@Html.DisplayName("Cập nhật")</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Huyen.Huyen_TenHuyen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Xa_Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Xa_Ma)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Xa_GhiChu)
                                </td>
                                <td style="width:100px; text-align:center">
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.Xa_ID }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.Xa_ID })
                                </td>
                            </tr>
                        }
                    </table>

                    <!-- Thêm mã phân trang -->
                    <span style="display: inline-block;">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount/ (Tổng số 11610 bản ghi)
                      
                    </span>
                    
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    <!-- Kết thúc -->
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#chooseFileButton').click(function () {
            $('#fileInput').click(); // Trigger the click event on the file input element
        });

        $('#fileInput').change(function () {
            var fileName = $(this).val();
            console.log(fileName)
        });
    });
</script>

