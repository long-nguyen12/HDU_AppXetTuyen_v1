@model PagedList.IPagedList<HDU_AppXetTuyen.Models.HocVienDuTuyen>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin_Master.cshtml";
}

<style>
    th, td {
        white-space: nowrap;
    }

    .bd-rd {
        border-radius: 3px
    }
</style>

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <div class="page-header-title  mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        <span>Quản lý danh mục dự tuyển</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid px-12">
    <div class="card card-collapsable mt-1 mb-1">
        <div class="card-header">
            <div><span id="sp_tieude">Danh sách học viên</span></div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("DsHvDuTuyen", "HocVienDangKys", FormMethod.Get))
            {
                <div class="row g-1">
                    <div class="col-lg-2 col-12">

                        @Html.DropDownList("filteriDotxt", null, new { @class = "form-select bd-rd" })
                    </div>
                    <div class="col-xxl-2 col-xl-12">
                        @Html.TextBox("searchString", ViewBag.SearchString as string, new { @class = "form-control bd-rd", @placeholder = "Nhập từ khóa..." })
                    </div>

                    <div class="col-xxl-2 col-xl-12">
                        <div class="d-inline-flex flex-nowrap align-items-center">
                            <button class="btn btn-outline-primary bd-rd " id="bt_search" style="margin-right:4px">Lọc</button>
                            <a class="btn btn-outline-secondary bd-rd  " id="bt_reset" href="@Url.Action("DsHvDuTuyen", "HocVienDangKys")" style="padding-right: 6px; padding-left: 6px; margin-right:4px">Tải lại</a>
                            <a class="btn btn-outline-primary bd-rd  " id="bt_export_excel2" href="@Url.Action("ExportHvDKDuTuyen", "ExportDatas")" style="padding-right:6px; padding-left:6px">Xuất excel</a>
                            <script>
                                $(document).ready(function () {
                                    $('#bt_export_excel').click(function () {
                                        var _filteriDotxt = $('#filteriDotxt').val();
                                        var _searchString = $('#searchString').val();
                                        var data = {
                                            FilteriDotxt: _filteriDotxt,
                                            SearchString: _searchString,
                                        }
                                        console.log(data)
                                        $.ajax({
                                            url: "/ExportHvDKDuTuyen/ExportHvDKDuTuyen/",
                                            data: JSON.stringify(data),
                                            type: "GET",
                                            contentType: 'application/json;charset=utf-8',
                                            dataType: 'json',
                                            async: false,
                                            success: function (response) {
                                                console.log(response)
                                                //if (response.success) {

                                                //}
                                                //else { }
                                            },
                                            error: function (errormessage) {
                                                console.log(errormessage.responseText);
                                            }
                                        });
                                    });
                                });
                            </script>
                        </div>
                    </div>
                    <hr class="mt-3 mb-2" />
                </div>
            }
            <script>
                $(document).ready(function () {
                    let sp_tieude = document.getElementById('sp_tieude');
                    if (window.innerWidth <= 1200) {
                        sp_tieude.innerText = "Quản lý danh sách học viên đăng ký";
                    }
                    else {
                        sp_tieude.innerText = "Quản lý danh sách học viên đăng ký";
                    }

                    function reportWindowSize() {
                        if (window.innerWidth <= 1200) {
                            sp_tieude.innerText = "Quản lý danh sách học viên đăng ký";
                        }
                        else {
                            sp_tieude.innerText = "Quản lý danh sách học viên đăng ký";
                        }
                    }
                    window.onresize = reportWindowSize;
                })
            </script>
            <div class="row">
                <div class="col-sm-12 col-12">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Họ, tên lót")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Tên")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Điện thoại")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Ngày sinh")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Giới tính")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Mã, Ngành học")
                                    </th>
                                    <th>
                                        @Html.DisplayName("ĐK Dự thi NN")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Ngày đăng ký")
                                    </th>

                                    <th style="text-align:center; width:160px">
                                        @Html.DisplayName("Cập nhật")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HocVienDangKy.HocVien_HoDem)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HocVienDangKy.HocVien_Ten)
                                        </td>


                                        <td>
                                            @Html.DisplayFor(modelItem => item.HocVienDangKy.HocVien_DienThoai)
                                        </td>

                                        <td>
                                            @{DateTime dateTimeNS = DateTime.Parse(item.HocVienDangKy.HocVien_NgaySinh);
                                                string formattedDateNS = dateTimeNS.ToString("dd/MM/yyyy");
                                                <div> @formattedDateNS </div>
                                            }

                                        </td>
                                        <td>
                                            @{if (item.HocVienDangKy.HocVien_GioiTinh == 0)
                                                {@Html.DisplayName("Nam")}
                                            else
                                            {@Html.DisplayName("Nữ") }}
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NganhMaster.Nganh_Mt_MaNganh) - @Html.DisplayFor(modelItem => item.NganhMaster.Nganh_Mt_TenNganh)
                                        </td>
                                        <td>
                                            @{
                                                if (item.HocVien_DKDTNgoaiNgu == 1)
                                                {
                                                    @Html.DisplayName("Dự thi NN")
                                                }
                                                if (item.HocVien_DKDTNgoaiNgu == 0)
                                                {
                                                    @Html.DisplayName("Được miễn")
                                                }
                                            }                                           
                                        </td>
                                        <td>
                                            @{DateTime dateTime = DateTime.Parse(item.DuTuyen_NgayDangKy);
                                                string formattedDate = dateTime.ToString("dd/MM/yyyy");
                                                <div> @formattedDate </div>
                                            }
                                        </td>
                                        <td style="text-align:center; vertical-align:middle">
                                            <a href="@Url.Action("DsHvDuTuyenCheck","HocVienDangKys" , new {id = item.HocVien_ID})" class="btn btn-light btn-sm bt-hs bd-rd">Kiểm tra</a> | 

                                            @*<a href="@Url.Action("DetailItem","ThiSinhDangKys" , new { id = item.HocVien_ID })" title="Xem chi tiết thông tin thí sinh"><i data-feather="list" style="vertical-align: middle !important "></i></a> |
                                                <a href="@Url.Action("DetailItem","ThiSinhDangKys" , new { id = item.HocVien_ID })" title="Chỉnh sửa thông tin thí sinh tin thí sinh"><i data-feather="edit" style="vertical-align: middle !important "></i></a> |*@
                                            <a href="@Url.Action("hvdk_Delete","HocVienDangKys" , new { id = item.HocVien_ID })" title="Xóa thông tin thí sinh"><i data-feather="trash-2" style="vertical-align:middle!important" disable></i></a>
                                        </td>

                                    </tr>

                                }
                            </tbody>
                        </table>
                        <!-- Thêm mã phân trang -->
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / Tổng @Model.PageCount trang/ (Tổng @ViewBag.totalRecod bản ghi)
                        @Html.PagedListPager(Model, page => Url.Action("DsHvDuTuyen", new { page, searchString = ViewBag.SearchString, filteriDotxt = ViewBag.filteriDotxtSort }))
                        <!-- Kết thúc -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

