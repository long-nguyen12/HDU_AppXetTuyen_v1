@model IEnumerable<HDU_AppXetTuyen.Models.DoiTuong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <h1 class="page-header-title mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        Đối tượng
                    </h1>
                </div>
                <div class="col-12 col-xl-auto mb-3">
                    @*<a class="btn btn-sm btn-light text-primary" href="user-management-groups-list.html">
                        <i class="me-1" data-feather="users"></i>
                        Manage Groups
                    </a>*@
                    <a class="btn btn-sm btn-light text-primary" href="@Url.Action("Create","DoiTuongs")">
                        <i class="me-1" data-feather="user-plus"></i>
                        Thêm mới
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-fluid px-4">
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered" id="datatablesSimple">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DoiTuong_Ten)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoiTuong_DiemUuTien)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoiTuong_GhiChu)
                    </th>
                    <th> Hành động </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoiTuong_Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoiTuong_DiemUuTien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoiTuong_GhiChu)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.DoiTuong_ID }) |
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.DoiTuong_ID }) |
                            @Html.ActionLink("Xoá", "Delete", new { id = item.DoiTuong_ID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>