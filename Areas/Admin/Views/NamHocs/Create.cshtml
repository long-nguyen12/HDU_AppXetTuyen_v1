@model HDU_AppXetTuyen.Models.NamHoc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <div class="page-header-title  mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        <span>Quản lý thông tin năm xét tuyển</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-fluid px-12">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-header-actions mt-1 mb-1 ">
                <div class="card-header">
                    <span>Thêm mới năm</span>
                    <a class="btn-close" aria-label="Close" href="@Url.Action("Index","NamHocs")"></a>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group col-md-6 mt-3">
                                @Html.Label("Tên năm", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.NamHoc_Ten, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NamHoc_Ten, "", new { @class = "text-danger" })
                                </div>
                            </div>
@*
                            <div class="form-group col-md-4 mt-3">
                                @Html.Label("Trạng thái", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.NamHoc_TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NamHoc_TrangThai, "", new { @class = "text-danger" })
                                </div>
                            </div>
*@
                            <div class="form-group col-md-6  mt-3">
                                @Html.Label("Ghi chú", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.NamHoc_GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NamHoc_GhiChu, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-12 mt-4">
                                <input type="submit" value="Đồng ý" class="btn btn-outline-primary" />
                                <a href="@Url.Action("Index","NamHocs")" class="btn btn-outline-danger">Hủy bỏ</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

