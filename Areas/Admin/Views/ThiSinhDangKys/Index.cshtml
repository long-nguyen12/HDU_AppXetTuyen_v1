<!-- Thêm thư viện -->
@model PagedList.IPagedList<HDU_AppXetTuyen.Models.ThiSinhDangKy>
@using PagedList.Mvc;
<!-- Kết thúc-->
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <h1 class="page-header-title mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        Thí sinh
                    </h1>
                </div>
                <div class="col-12 col-xl-auto mb-3">
                    @*<a class="btn btn-sm btn-light text-primary" href="@Url.Action("Create","Huyens")">
                            <i class="me-1" data-feather="user-plus"></i>
                            Thêm mới
                        </a>*@
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid px-4">
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-responsive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ThiSinh_HoLot)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ThiSinh_Ten)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ThiSinh_DienThoai)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ThiSinh_Email)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ThiSinh_NgaySinh)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ThiSinh_HoKhauThuongTru)
                    </th>
                    <th>
                        Ngày đăng ký
                    </th>

                    <th style="text-align:center">
                        Hành động
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThiSinh_HoLot)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThiSinh_Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThiSinh_DienThoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThiSinh_Email)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.ThiSinh_NgaySinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThiSinh_HoKhauThuongTru)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThiSinh_NgayDangKy)
                        </td>

                        <td style="text-align:center; width:180px"> 
                            <a class="btn btn-outline-success btn-sm" href="@Url.Action("Details","ThiSinhDangKys" , new { id = item.ThiSinh_ID })">  Xem </a>&nbsp;
                            <a class="btn btn-outline-primary btn-sm m-1" href="@Url.Action("Edit","ThiSinhDangKys", new { id = item.ThiSinh_ID } )">  Sửa </a>&nbsp;
                            <a class="btn btn-outline-danger btn-sm" href="@Url.Action("Delete","ThiSinhDangKys" , new { id = item.ThiSinh_ID })">  Xoá </a>&nbsp;
                            @*<a class="btn btn-datatable" href="@Url.Action("Edit","ThiSinhDangKys")"><i data-feather="edit" class="text-primary"> </i> </a>
        <a class="btn btn-datatable" href="@Url.Action("Details","ThiSinhDangKys")"><i data-feather="eye" class="text-success"></i></a>
        <a class="btn btn-datatable" href="@Url.Action("Delete","ThiSinhDangKys")"><i data-feather="trash-2" class="text-danger"></i></a>*@
                        </td>
                    </tr>
                }

            </table>
            <!-- Thêm mã phân trang -->
            <br />
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page }))
            <!-- Kết thúc -->
        </div>
    </div>
</div>