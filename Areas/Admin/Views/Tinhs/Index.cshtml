<!-- Thêm thư viện -->
@model PagedList.IPagedList<HDU_AppXetTuyen.Models.Tinh>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <div class="page-header-title  mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        <span>Quản lý thông tin tỉnh</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-fluid px-12">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-header-actions mt-1 mb-1 ">
                <div class="card-header">
                    <span>Danh sách các tỉnh, thành phố</span>
                    <a class="btn btn-outline-primary btn-sm align-items-center" href="@Url.Action("Create", "Tinhs")"> + Thêm mới</a>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover m-0 mb-2">
                        <thead>
                            <tr>
                                <th>@Html.DisplayName("Tên tỉnh") </th>
                                <th>@Html.DisplayName("Mã tỉnh") </th>
                                <th>@Html.DisplayName("Ghi chú")</th>
                                <th style="width:100px; text-align:center">@Html.DisplayName("Cập nhật")</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tinh_Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tinh_Ma)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tinh_GhiChu)
                                </td>
                                <td style="width:100px; text-align:center">
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.Tinh_ID }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.Tinh_ID })
                                </td>
                            </tr>
                        }
                    </table>
                    <!-- Thêm mã phân trang -->                   
                    <span class="mb-0">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                    @Html.PagedListPager(Model, page => Url.Action("Index",new { page }))
                    <!-- Kết thúc -->
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#chooseFileButton').click(function () {
            $('#fileInput').click(); // Trigger the click event on the file input element
        });

        $('#fileInput').change(function () {
            var fileName = $(this).val();
            console.log(fileName)
        });
    });
</script>