<!-- Thêm thư viện -->
@model PagedList.IPagedList<HDU_AppXetTuyen.Models.DangKyXetTuyenKQTQG>
@using PagedList.Mvc;
<!-- Kết thúc-->
@{
    ViewBag.Title = "QL DS DKXT";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    th, td {
        white-space: nowrap;
    }

    .bt-hs {
        width: 80px;
    }

    .bd-rd {
        /*  border-radius: 0px !important;*/
    }
</style>
<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <div class="page-header-title  mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        <span>Quản lý Thí sinh đăng ký xét tuyển</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid px-12">
    <div class="card card-header-actions">
        <div class="card-header">
            <div><span id="sp_tieude">Danh sách thí sinh đăng ký xét tuyển sử dụng kết quả thi TN THPT</span></div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("DkxtKQTthpt", "DangKyXetTuyens", FormMethod.Get))
            {
                <div class="row g-1">
                    <div class="col-xxl-1 col-xl-12">
                        @Html.DropDownList("filteriDotxt", null, new { @class = "form-select " })
                    </div>
                    <div class="col-xxl-1 col-xl-12">
                        @Html.DropDownList("filteriNvong", null, "N.vọng...", new { @class = "form-select" })
                    </div>
                    <div class="col-xxl-2 colxl-12">
                        @Html.DropDownList("filteriNganh", null, "Ngành...", new { @class = "form-select" })
                    </div>
                    <div class="col-xxl-2 col-xl-12">
                        @Html.DropDownList("filteriLePhi", null, "Theo dõi lệ phí...", new { @class = "form-select " })
                    </div>
                    <div class="col-xxl-2 col-xl-12">
                        @Html.DropDownList("filteriHoSo", null, "Theo dõi hồ sơ...", new { @class = "form-select " })
                    </div>
                    <div class="col-xxl-2 col-xl-12">
                        @Html.TextBox("searchString", ViewBag.SearchString as string, new { @class = "form-control ", @placeholder = "Nhập từ khóa..." })
                    </div>

                    <div class="col-xxl-2 col-xl-12">
                        <div class="d-inline-flex flex-nowrap align-items-center">
                            <button class="btn btn-outline-primary bd-rd " id="bt_search" style="margin-right:4px">Lọc</button>
                            <a class="btn btn-outline-secondary bd-rd  " id="bt_reset" href="@Url.Action("DkxtKQTthpt", "DangKyXetTuyens")" style="padding-right: 6px; padding-left: 6px; margin-right:4px">Tải lại</a>
                            <a class="btn btn-outline-primary bd-rd  " id="bt_export_excel" href="#" style="padding-right:6px; padding-left:6px">Xuất excel</a>
                        </div>
                    </div>
                    <hr class="mt-3 mb-2" />
                </div>
            }
            <script>
                $(document).ready(function () {
                    let sp_tieude = document.getElementById('sp_tieude');
                    if (window.innerWidth <= 1200) {
                        sp_tieude.innerText = "Danh sách TS ĐKXT sử dụng KQT TNTHPT";
                    }
                    else {
                        sp_tieude.innerText = "Danh sách thí sinh đăng ký xét tuyển sử dụng kết quả thi TN THPT";
                    }

                    function reportWindowSize() {
                        if (window.innerWidth <= 1200) {
                            sp_tieude.innerText = "Danh TS ĐKXT sử dụng KQT TNTHPT";
                        }
                        else {
                            sp_tieude.innerText = "Danh sách thí sinh đăng ký xét tuyển sử dụng kết quả thi TN THPT";
                        }
                    }
                    window.onresize = reportWindowSize;
                })
            </script>
            <div class="row g-1">
                <div class="col-sm-12 col-12">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Điện thoại</th>
                                    <th>N.vọng</th>
                                    <th>Ngành</th>
                                    <th>Tổ hợp môn</th>
                                    <th>Tổng điểm</th>
                                    <th>Năm TN</th>
                                    <th>Lệ phí</th>
                                    <th>Hồ sơ</th>
                                    <th style="width:100px">Cập nhật</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="10" style="text-align:center; color:red"><span>Không có dữ liệu</span></td>
                                        </tr>
                                    }
                                    else
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ThiSinhDangKy.ThiSinh_HoLot) @Html.DisplayFor(modelItem => item.ThiSinhDangKy.ThiSinh_Ten)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ThiSinhDangKy.ThiSinh_DienThoai)
                                                </td>
                                                <td>
                                                    NV @Html.DisplayFor(modelItem => item.Dkxt_KQTQG_NguyenVong)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nganh.Nganh_GhiChu)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ToHopMon.Thm_MaTen)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Dkxt_KQTQG_TongDiem_Full)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Dkxt_KQTQG_NamTotNghiep)
                                                </td>
                                                <td>
                                                    @{
                                                        if (item.Dkxt_KQTQG_TrangThai == 0)
                                                        {
                                                            @Html.DisplayName("Chưa nộp")

                                                        }
                                                        if (item.Dkxt_KQTQG_TrangThai == 1)
                                                        {
                                                            @Html.DisplayName("Đã nộp")

                                                        }
                                                        if (item.Dkxt_KQTQG_TrangThai == 2)
                                                        {
                                                            @Html.DisplayName("Đã duyệt")

                                                        }
                                                    }
                                                </td>

                                                <td>
                                                    @{
                                                        if (item.Dkxt_KQTQG_TrangThai_KetQua == 0)
                                                        {
                                                            @Html.DisplayName("Chưa KT")
                                                        }
                                                        if (item.Dkxt_KQTQG_TrangThai_KetQua == 1)
                                                        {
                                                            @Html.DisplayName("MC sai")

                                                        }
                                                        if (item.Dkxt_KQTQG_TrangThai_KetQua == 2)
                                                        {
                                                            @Html.DisplayName("HS đầy đủ")
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("DkxtKQTthpt_hs_view", "DangKyXetTuyens", new {
                                                                    dkxt_KQTQG_ID=item.Dkxt_KQTQG_ID,
                                                                    filteriDotxt =ViewBag.DotxtFilteri,
                                                                    filteriNvong =ViewBag.NvongFilteri,
                                                                    filteriNganh =  ViewBag.NganhFilteri,
                                                                    filteriLePhi = ViewBag.LePhiFilteri,
                                                                    filteriHoSo =ViewBag.HoSoFilteri,
                                                                    searchString =ViewBag.SearchString,
                                                                    page = ViewBag.pageCurren })"
                                                       class="btn btn-light btn-sm bt-hs bd-rd">Kiểm tra</a>
                                                </td>
                                                @*<td>
                                                        @{
                                                            if (item.Dkxt_KQTQG_TrangThai_KetQua == 0)
                                                            {
                                                                <a href="@Url.Action("DkxtKQTthpt_hs_view", "DangKyXetTuyens", new {
                                                                        dkxt_KQTQG_ID=item.Dkxt_KQTQG_ID,
                                                                        filteriDotxt =ViewBag.DotxtFilteri,
                                                                        filteriNvong =ViewBag.NvongFilteri,
                                                                        filteriNganh =  ViewBag.NganhFilteri,
                                                                        filteriLePhi = ViewBag.LePhiFilteri,
                                                                        filteriHoSo =ViewBag.HoSoFilteri,
                                                                        searchString =ViewBag.SearchString,
                                                                        page = ViewBag.pageCurren })" class="btn btn-outline-danger btn-sm bt-hs bd-rd">Chưa KT</a>
                                                            }
                                                            if (item.Dkxt_KQTQG_TrangThai_KetQua == 1)
                                                            {
                                                                <a href="@Url.Action("DkxtKQTthpt_hs_view", "DangKyXetTuyens", new {
                                                                        dkxt_KQTQG_ID=item.Dkxt_KQTQG_ID,
                                                                        filteriDotxt =ViewBag.DotxtFilteri,
                                                                        filteriNvong =ViewBag.NvongFilteri,
                                                                        filteriNganh =  ViewBag.NganhFilteri,
                                                                        filteriLePhi = ViewBag.LePhiFilteri,
                                                                        filteriHoSo =ViewBag.HoSoFilteri,
                                                                        searchString =ViewBag.SearchString,
                                                                        page = ViewBag.pageCurren })" class="btn btn-outline-success btn-sm bt-hs bd-rd">MC sai</a>
                                                            }
                                                            if (item.Dkxt_KQTQG_TrangThai_KetQua == 2)
                                                            {
                                                                <a href="@Url.Action("DkxtKQTthpt_hs_view", "DangKyXetTuyens", new {
                                                                        dkxt_KQTQG_ID=item.Dkxt_KQTQG_ID,
                                                                        filteriDotxt =ViewBag.DotxtFilteri,
                                                                        filteriNvong =ViewBag.NvongFilteri,
                                                                        filteriNganh =  ViewBag.NganhFilteri,
                                                                        filteriLePhi = ViewBag.LePhiFilteri,
                                                                        filteriHoSo =ViewBag.HoSoFilteri,
                                                                        searchString =ViewBag.SearchString,
                                                                        page = ViewBag.pageCurren })"
                                                                   class="btn btn-outline-primary btn-sm bt-hs bd-rd">Đã KT</a>

                                                            }
                                                        }
                                                    </td>
                                                    <td style="white-space:nowrap">
                                                        <a href="@Url.Action("DkxtKQTthpt_hs_view", "DangKyXetTuyens")" title="Xem chi tiết thông tin thí sinh"><i data-feather="list" style="vertical-align: middle !important "></i></a> |
                                                        <a href="@Url.Action("DkxtKQTthpt_hs_view", "DangKyXetTuyens", new { id = item.Dkxt_KQTQG_ID })" title="Chỉnh sửa thông tin thí sinh tin thí sinh"><i data-feather="edit" style="vertical-align: middle !important "></i></a> |
                                                        <a href="#" title="Xóa thông tin thí sinh"><i data-feather="trash-2" style="vertical-align:middle!important" disable></i></a>
                                                    </td>*@
                                            </tr>
                                        }
                                    }

                                }
                            </tbody>
                        </table>

                        <!-- Thêm mã phân trang -->
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / Tổng @Model.PageCount trang/ (Tổng @ViewBag.totalRecod bản ghi)
                        @Html.PagedListPager(Model, page => Url.Action("DkxtKQTthpt", new
                        {
                            filteriDotxt = ViewBag.DotxtFilteri,
                            filteriNvong = ViewBag.NvongFilteri,
                            filteriNganh = ViewBag.NganhFilteri,
                            filteriLePhi = ViewBag.LePhiFilteri,
                            filteriHoSo = ViewBag.HoSoFilteri,
                            searchString = ViewBag.SearchString,
                            page
                        }))
                        <!-- Kết thúc  -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

