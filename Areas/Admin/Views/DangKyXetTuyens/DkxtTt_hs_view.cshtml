                            var str_div_hbb_first = '<div class="carousel-item active">' + '<img src="' + mc_hocba_bangtn_arr[0] + '" class="h-100 d-block w-100" alt="...">' + '</div>';
                            $('#list_item_div_cn_hocba_bangtn').append(str_div_hbb_first);
                        }
