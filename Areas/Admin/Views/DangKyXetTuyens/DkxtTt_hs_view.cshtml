                            var str_div_diem_first = '<div class="carousel-item active">' + '<img src="' + mc_diemtn_arr[0] + '" class="h-100 d-block w-100" alt="...">' + '</div>';
                            $('#list_item_div_cn_totnghiep').append(str_div_diem_first);
                        }
                        else {
                            var str_bt_diem_second = '<button type="button" data-bs-target="#carousel_cn_totnghiep" data-bs-slide-to="' + index_mc_diem + '" aria-label="Slide ' + index_mc_diem + '"></button>';
                            $('#list_item_bt_cn_totnghiep').append(str_bt_diem_second);
                            var str_div_diem_second = '<div class="carousel-item">' + '<img src="' + mc_diemtn_arr[index_mc_diem] + '" class="h-100 d-block w-100" alt="...">' + '</div>';
                            $('#list_item_div_cn_totnghiep').append(str_div_diem_second);
                        }
                    }
                    // hiển thị minh chứng  học bạ và bằng
                    var mc_hocba_bangtn = result[0].dkxt_KQTQG_MinhChung_HocBa;
                    var mc_hocba_bangtn_arr = mc_hocba_bangtn.split("#");

                    for (var index_mc_hb_bang = 0; index_mc_hb_bang < mc_hocba_bangtn_arr.length - 1; index_mc_hb_bang++) {

                        if (index_mc_hb_bang == 0) {
