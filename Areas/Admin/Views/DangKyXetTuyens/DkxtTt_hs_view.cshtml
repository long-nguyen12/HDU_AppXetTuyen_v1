                            }
                        }
                    }
                    else {
                        $('#div_view_cancuoc_congdan').empty();
                        var str_a = `<a  style="color:red; margin-bottom:5px">Không có dữ liệu</a> &ensp;`;
                        $('#div_view_cancuoc_congdan').append(str_a);
                    }

                    if (data.Dkxt_MinhChung_UuTien) {
                        $('#div_view_giayto_uutien').empty();
                        const ArrGTUT = data.Dkxt_MinhChung_UuTien.split("#");
                        for (i = 0; i < ArrGTUT.length; i++) {
                            if (ArrGTUT[i].length > 0) {
                                var str_a = `<a class="btn btn-light btn-sm" style="color:blue" onclick="showimg('${ArrGTUT[i]}', 4,${data.Dkxt_ID} )">Tệp ${i + 1}</a> &ensp;`;
                                $('#div_view_giayto_uutien').append(str_a);
                            }
                        }
                    }
                    else {
                        $('#div_view_giayto_uutien').empty();
                        var str_a = `<a  style="color:red; margin-bottom:5px">Không có dữ liệu</a> &ensp;`;
                        $('#div_view_giayto_uutien').append(str_a);
                    }

                    if (data.Dkxt_TrangThai_HoSo == 0 || data.Dkxt_TrangThai_HoSo == 2) {
                        $('#radioHoSoDayDu').removeAttr('checked', 'checked');
                        $('#radioHoSoThieu').removeAttr('checked', 'checked');
                        $('#DuTuyen_ThongBaoKiemDuyet').val('');
                    }
                    else {
                        if (data.Dkxt_TrangThai_HoSo == 9) {
                            $('#radioHoSoDayDu').attr('checked', 'checked');
                            $('#radioHoSoThieu').removeAttr('checked', 'checked');
                            $('#DuTuyen_ThongBaoKiemDuyet').val(data.DuTuyen_ThongBaoKiemDuyet);
                        }
                        else if (data.Dkxt_TrangThai_HoSo == 1) {
                            $('#radioHoSoDayDu').removeAttr('checked', 'checked');
                            $('#radioHoSoThieu').attr('checked', 'checked');
                            $('#DuTuyen_ThongBaoKiemDuyet').val(data.DuTuyen_ThongBaoKiemDuyet);
                        }
                    }
                }

            },
            error: function (errormessage) {
                console.log(errormessage.error);
            }
        });
    });

</script>
