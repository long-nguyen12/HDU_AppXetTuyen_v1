                            $('#list_item_bt_cn_hocba_bangtn').append(str_bt_hbb_second);
                            var str_div_hbb_second = '<div class="carousel-item">' + '<img src="' + mc_hocba_bangtn_arr[index_mc_hb_bang] + '" class="h-100 d-block w-100" alt="...">' + '</div>';
                            $('#list_item_div_cn_hocba_bangtn').append(str_div_hbb_second);
                        }
                    }

                    // hiển thị minh chứng căn cước công dân
                    var mc_cccd = result[0].dkxt_KQTQG_MinhChung_CCCD;
                    var mc_cccd_arr = mc_cccd.split("#");

