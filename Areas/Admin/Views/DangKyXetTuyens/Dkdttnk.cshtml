@model PagedList.IPagedList<HDU_AppXetTuyen.Models.DangKyDuThiNangKhieu>
@using PagedList.Mvc;
<!-- Kết thúc-->
@{
    ViewBag.Title = "QL DS DKXT";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<!-- Thêm thư viện -->
<style>
    th, td {
        white-space: nowrap;
    }

    .bt-hs {
        width: 80px;
    }

    .bd-rd {
        border-radius: 3px
    }
</style>

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <div class="page-header-title  mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        <span>Quản lý đăng ký dự thi năng khiếu</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid px-12">
    <div class="card card-collapsable">
        <div class="card-header">
            <div id="div_tieude"><span>Danh sách thí sinh đăng ký dự thi năng khiếu</span></div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Dkdttnk", "DangKyXetTuyens", FormMethod.Get))
            {
                <div class="row g-1">
                    <div class="col-xxl-2 col-md-12">
                        @Html.DropDownList("filteriDotxt", null, new { @class = "form-select bd-rd" })
                    </div>

                    <div class="col-xxl-2 col-md-12">
                        @Html.DropDownList("filteriNganh", null, "Ngành...", new { @class = "form-select bd-rd" })
                    </div>
                    <div class="col-xxl-2 col-md-12">
                        @Html.DropDownList("filteriLePhi", null, "Theo dõi lệ phí...", new { @class = "form-select bd-rd" })
                    </div>
                    <div class="col-xxl-2 col-md-12">
                        @Html.DropDownList("filteriHoSo", null, "Theo dõi hồ sơ...", new { @class = "form-select  bd-rd" })
                    </div>
                    <div class="col-xxl-2 col-md-12">
                        @Html.TextBox("searchString", ViewBag.SearchString as string, new { @class = "form-control  bd-rd", @placeholder = "Nhập từ khóa..." })
                    </div>
                    <div class="col-xxl-2 col-xl-12">
                        <div class="d-inline-flex flex-nowrap align-items-center">
                            <button class="btn btn-outline-primary bd-rd text-nowrap" id="bt_search" style="margin-right:4px" title="Lọc dữ liệu"><i data-feather="filter" style="vertical-align:middle!important"></i></button>
                            <a class="btn btn-outline-primary bd-rd text-nowrap" id="bt_reset" href="@Url.Action("Dkdttnk", "DangKyXetTuyens")" style="margin-right:4px;" title="Tải lại dữ liệu"><i data-feather="rotate-ccw" style="vertical-align:middle!important"></i></a>
                            <a class="btn btn-outline-primary bd-rd text-nowrap" id="bt_extend" style="margin-right:4px; display:none"><i data-feather="chevron-down" style="vertical-align:middle!important"></i></a>
                            <a class="btn btn-outline-primary bd-rd text-nowrap" id="bt_collapse" style="margin-right: 4px; display: none"><i data-feather="chevron-up" style="vertical-align:middle!important"></i></a>
                            <a class="btn btn-outline-primary bd-rd  text-nowrap" href="@Url.Action("", "ExportDatas")" id="bt_export_excel" style="padding-right:6px; padding-left:6px" title="Xuất dữ liệu ra tệp excel"><i data-feather="download" style="vertical-align:middle!important"></i> Excel</a>

                            @*<button class="btn btn-outline-primary bd-rd" id="bt_search" style="margin-right:4px">Lọc</button>
                                <a class="btn btn-outline-secondary bd-rd " id="bt_reset" href="@Url.Action("Dkdttnk", "DangKyXetTuyens")" style="padding-right: 6px; padding-left: 6px; margin-right:4px">Tải lại</a>
                                <a class="btn btn-outline-primary bd-rd  " id="bt_reset" href="@Url.Action("ExportTsDKThiNangKhieu", "ExportDatas")" style="padding-right:6px; padding-left:6px">Xuất excel</a>*@
                        </div>
                    </div>
                    <hr class="mt-2 mb-2" />
                </div>
            }
            <div class="row g-1">
                <div class="col-sm-12 col-12">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Điện thoại</th>
                                    <th>Ngành</th>
                                    <th>Tổ hợp môn</th>
                                    <th>Tên môn dự thi</th>
                                    <th>Lệ phí</th>
                                    <th>Hồ sơ</th>
                                    <th style="width:100px">Kiểm tra</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThiSinhDangKy.ThiSinh_HoLot) @Html.DisplayFor(modelItem => item.ThiSinhDangKy.ThiSinh_Ten)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThiSinhDangKy.ThiSinh_DienThoai)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nganh.Nganh_TenNganh)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ToHopMon.Thm_TenToHop)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dkdt_NK_MonThi)
                                        </td>

                                        <td>
                                            @{
                                                if (item.Dkdt_TrangThai_LePhi == 0)
                                                {
                                                    <span style="color: red">Chưa nộp LP</span>
                                                }
                                                if (item.Dkdt_TrangThai_LePhi == 1)
                                                {
                                                    <span style="color: red">Đã nộp, chưa KT</span>
                                                }
                                                if (item.Dkdt_TrangThai_LePhi == 2)
                                                {
                                                    <span style="color:blue">Đã KT, Có sai sót</span>
                                                }
                                                if (item.Dkdt_TrangThai_LePhi == 3)
                                                {
                                                    <span style="color:red">Đã sửa, chưa KT</span>
                                                }
                                                if (item.Dkdt_TrangThai_LePhi == 9)
                                                {
                                                    <span>Đã KT, Đúng</span>
                                                }
                                            }
                                        </td>

                                        <td>
                                            @{
                                                if (item.Dkdt_TrangThai_HoSo == 0)
                                                {
                                                    <span style="color: red">Đã nộp, chưa KT</span>
                                                }
                                                if (item.Dkdt_TrangThai_HoSo == 1)
                                                {
                                                    <span style="color: blue">Đã KT, Có sai sót</span>
                                                }
                                                if (item.Dkdt_TrangThai_HoSo == 2)
                                                {
                                                    <span style="color: red">Đã sửa, chưa KT</span>
                                                }
                                                if (item.Dkdt_TrangThai_HoSo == 9)
                                                {
                                                    <span>Đã KT, HS đúng, đủ</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-light btn-sm" onclick="KiemtraThongTinDangky(@item.Dkdt_NK_ID)">Kiểm tra</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- Thêm mã phân trang -->
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / Tổng @Model.PageCount trang/ (Tổng @ViewBag.totalRecod bản ghi)
                        @Html.PagedListPager(Model, page => Url.Action("Dkdttnk", new
                        {
                            filteriDotxt = ViewBag.DotxtFilteri,
                            filteriNvong = ViewBag.NvongFilteri,
                            filteriNganh = ViewBag.NganhFilteri,
                            filteriLePhi = ViewBag.LePhiFilteri,
                            filteriHoSo = ViewBag.HoSoFilteri,
                            searchString = ViewBag.SearchString,
                            page
                        }))
                        <!-- Kết thúc  -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function KiemtraThongTinDangky(id) {
        var str_query = window.location.search;

        if (str_query.length == 0) {
            str_query = '?dkdt_nk_id=' + id;
        }
        else {
            str_query += '&dkdt_nk_id=' + id;
        }
        window.location.href = "/Admin/DangKyXetTuyens/Dkdttnk_hs_view" + str_query;
    }
</script>
