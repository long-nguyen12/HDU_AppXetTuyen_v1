<script>
    $(document).ready(function () {
        LoadDataPhuongThuc2();
    })
    function LoadDataPhuongThuc2() {
        let currentYear = new Date().getFullYear();
        let nam_list = [
            { value: 0, text: "Chọn năm" },
            /* { value: currentYear, text: currentYear },*/
            { value: currentYear - 1, text: currentYear - 1 },
            { value: currentYear - 2, text: currentYear - 2 },
        ]

        let select_NamTN = $('#select_namtn');

        $.each(nam_list, function (index, option) {
            select_NamTN.append($('<option>', {
                value: option.value,
                text: option.text
            }));
        });

        let data_get = { Dkxt_KQTQG_ID: $('#hidden_Dkxt_ID').val() }
        $.ajax({
            url: "/Admin/TongHopSoLieuDKXTs/DangKyXetTuyen_KQTHPTQG_GetByID",
            data: JSON.stringify(data_get),
            type: 'POST',
            contentType: 'application/json;charset=utf-8',
            dataType: 'json',
            async: false,
            success: function (res) {
                /* console.log("test", res)*/
                if (res.success) {
                    let data = res.data;
                    console.log("load data ", data);
                    $('#HoTen').text(data.ThiSinh_HoLot + data.ThiSinh_Ten);
                    $('#CanCuocCongDan').text(data.ThiSinh_CCCD);
                    $('#DienThoai').text(data.ThiSinh_DienThoai);
                    $('#Email').text(data.ThiSinh_Email);
                    $('#NgaySinh').text(data.ThiSinh_NgaySinh);
                    $('#GioiTinh').text(data.ThiSinh_GioiTinh);
                    $('#DanToc').text(data.ThiSinh_DanToc);

                    $('#NguyenVong').text(data.ThiSinh_NguyenVong);
                    $('#Nganh').text(data.ThiSinh_Nganh);
                    $('#ToHopMon').text(data.ThiSinh_ToHopMon);
                    $('#TongDiem').text(data.ThiSinh_TongDiem);
                    $('#TongDiemFull').text(data.ThiSinh_TongDiemFull);
                    $('#NamTotNghiep').text(data.ThiSinh_NamTotNghiep);
                    var str_mondiem = data.Dkxt_Diem_M1.TenMon + ": " + data.Dkxt_Diem_M1.Diem;
                    str_mondiem += ", " + data.Dkxt_Diem_M2.TenMon + ": " + data.Dkxt_Diem_M2.Diem;
                    str_mondiem += ", " + data.Dkxt_Diem_M3.TenMon + ": " + data.Dkxt_Diem_M3.Diem;
                    $('#MonDiem').text(str_mondiem);
                    //$('#').text(data.);

                    $('#ThiSinh_TruongCapBa').val(data.ThiSinh_TruongCapBa);
                    $('#ThiSinh_TruongCapBa_Ma').val(data.ThiSinh_TruongCapBa_Ma);
                    $('#ThiSinh_TruongCapBa_Tinh_ID').val(data.ThiSinh_TruongCapBa_Tinh_ID);
                    $('#ThiSinh_DCNhanGiayBao').val(data.ThiSinh_DCNhanGiayBao);
                    $('#ThiSinh_HoKhauThuongTru').val(data.ThiSinh_HoKhauThuongTru);

                    $('#txt_hocluc_12').val(data.ThiSinh_HocLucLop12);
                    $('#txt_hanhkiem_12').val(data.ThiSinh_HanhKiemLop12);

                    $('#span_Uutien_doituong').text(data.DoiTuong_ID);
                    $('#span_Uutien_khuvuc').text(data.KhuVuc_ID);

                    $('#select_namtn').val(data.Dkxt_KQTQG_NamTotNghiep);

                    $('#lb_tenmon_1').text(data.Dkxt_Diem_M1.TenMon);
                    $('#txt_m1').val(data.Dkxt_Diem_M1.Diem);

                    $('#lb_tenmon_2').text(data.Dkxt_Diem_M2.TenMon);
                    $('#txt_m2').val(data.Dkxt_Diem_M2.Diem);

                    $('#lb_tenmon_3').text(data.Dkxt_Diem_M3.TenMon);
                    $('#txt_m3').val(data.Dkxt_Diem_M3.Diem);

                    $('#txt_tong_diem').val(data.Dkxt_KQTQG_Diem_Tong);

                    $('#hidden_TrangThai_KinhPhi').val(data.Dkxt_KQTQG_TrangThai_KinhPhi);

                    $('#Dkxt_ThongBaoKiemDuyet_HoSo').val(data.Dkxt_ThongBaoKiemDuyet_HoSo);

                    if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 0) {
                        $('#div_dung').hide();
                        $('#div_sai').hide();
                        $('#div_dung_sai').show();
                        $('#radioThongtinLePhiDung').removeAttr('checked', 'checked');
                        $('#radioThongtinLePhiSai').removeAttr('checked', 'checked');
                    }
                    else {
                        $('#div_dung_sai').show();
                        $('#div_dung').show();
                        $('#div_sai').show();
                        $('#stc_txt').text('Mã tham chiếu: ');
                        $('#stc_number').text(data.Dkxt_KQTQG_KinhPhi_SoThamChieu);

                        if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 1 || data.Dkxt_KQTQG_TrangThai_KinhPhi == 3) {
                            $('#radioThongtinLePhiDung').removeAttr('checked', 'checked');
                            $('#radioThongtinLePhiSai').removeAttr('checked', 'checked');
                        }
                        if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 2) {
                            $('#radioThongtinLePhiDung').removeAttr('checked', 'checked');
                            $('#radioThongtinLePhiSai').attr('checked', 'checked');
                        }
                        if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 9) {
                            $('#radioThongtinLePhiDung').attr('checked', 'checked');
                            $('#radioThongtinLePhiSai').removeAttr('checked', 'checked');
                        }
                    }


                    $('#div_mc_chungnhan_totnghiep').empty();
                    $('#div_mc_hocba').empty();
                    $('#div_mc_bangtotnghiep').empty();
                    $('#div_mc_cccd').empty();
                    $('#div_mc_giayto_uutien').empty();
                    $('#div_mc_lephi').empty();

                    if (data.Dkxt_KQTQG_MinhChung_CNTotNghiep) {
                        const ArrCnTN = data.Dkxt_KQTQG_MinhChung_CNTotNghiep.split("#");

                        if (ArrCnTN.length > 0) {
                            $('#div_mc_chungnhan_totnghiep').append('- Chứng nhận tốt nghiệp: ');
                            for (i = 0; i < ArrCnTN.length; i++) {

                                if (ArrCnTN[i].length > 0) {

                                    var str_a = ` <a href="#$" class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" onclick="showimg('${ArrCnTN[i]}',1,${data.Dkxt_KQTQG_ID} )">Tệp ${i + 1}</a> `;
                                    $('#div_mc_chungnhan_totnghiep').append(str_a);
                                    if (i == 0) {
                                        $('#img_txt_card_hearder').text('Hình ảnh minh chứng chứng nhận tốt nghiệp');
                                        var url = ArrCnTN[i];
                                        var lastChar = url.substr(url.length - 4); // => kiểm tra file pdf hoặc img

                                        if (lastChar.toLowerCase() != ".pdf") {
                                            $('#pdf_view').height('0px');
                                            $('#pdf_view').hide();
                                            $('#pdf_view').css('display', 'none');
                                            $("#img_view").attr("src", url);
                                            $("#img_view").show();

                                        }

                                        if (lastChar.toLowerCase() === ".pdf") {
                                            $("#img_view").hide();
                                            $('#pdf_view').height('500px');
                                            $('#pdf_view').css('display', 'inline');
                                            $('#pdf_view').show();

                                            $("#pdf_view").attr("src", url);

                                            $("#pdf_view").show();
                                        }
                                        $('#div_view_data_img').show();
                                        $('#bt_delete_div_view_img').hide();
                                    }
                                }
                            }
                            $('#div_mc_chungnhan_totnghiep').show();
                        }
                        else {

                            $('#div_mc_chungnhan_totnghiep').hide();
                        }
                    }
                    else {
                        $('#img_txt_card_hearder').text('Chứng nhận tốt nghiệp');
                        $("#img_view").attr("src", "/Content/images/no-image.png");
                        pdf_view.style.display = "none";
                        pdf_view.style.height = "0px";
                        $('#div_view_img').show();
                    }

                    if (data.Dkxt_KQTQG_MinhChung_HocBa) {
                        const ArrHocBa = data.Dkxt_KQTQG_MinhChung_HocBa.split("#");
                        if (ArrHocBa.length > 0) {
                            $('#div_mc_hocba').append('- Học bạ: ');
                            for (i = 0; i < ArrHocBa.length; i++) {
                                if (ArrHocBa[i].length > 0) {
                                    var str_a = ` <a href="#$" class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"  onclick="showimg('${ArrHocBa[i]}',2,${data.Dkxt_KQTQG_ID} )">Tệp ${i + 1}</a> `;
                                    $('#div_mc_hocba').append(str_a);
                                }
                            }
                            $('#div_mc_hocba').show();
                        }
                        else {
                            $('#div_mc_hocba').hide();
                        }
                    }

                    if (data.Dkxt_KQTQG_MinhChung_BangTN) {
                        const ArrBTN = data.Dkxt_KQTQG_MinhChung_BangTN.split("#");
                        if (ArrBTN.length > 0) {
                            $('#div_mc_bangtotnghiep').append('- Bằng tốt nghiệp: ');
                            for (i = 0; i < ArrBTN.length; i++) {
                                if (ArrBTN[i].length > 0) {
                                    var str_a = ` <a href="#$" class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"  onclick="showimg('${ArrBTN[i]}',3,${data.Dkxt_KQTQG_ID} )">Tệp ${i + 1}</a> `;
                                    $('#div_mc_bangtotnghiep').append(str_a);
                                }
                            }
                            $('#div_mc_bangtotnghiep').show();
                        }
                        else {
                            $('#div_mc_bangtotnghiep').hide();
                        }
                    }

                    if (data.Dkxt_KQTQG_MinhChung_CCCD) {
                        const ArrCccd = data.Dkxt_KQTQG_MinhChung_CCCD.split("#");
                        if (ArrCccd.length > 0) {
                            $('#div_mc_cccd').append('- Căn cước công dân: ');
                            for (i = 0; i < ArrCccd.length; i++) {
                                if (ArrCccd[i].length > 0) {
                                    var str_a = ` <a href="#$" class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"  onclick="showimg('${ArrCccd[i]}',4,${data.Dkxt_KQTQG_ID} )">Tệp ${i + 1}</a> `;
                                    $('#div_mc_cccd').append(str_a);
                                }
                            }
                            $('#div_mc_cccd').show();
                        }
                        else {
                            $('#div_mc_cccd').hide();
                        }
                    }

                    if (data.Dkxt_KQTQG_MinhChung_UuTien) {
                        const ArrGTUT = data.Dkxt_KQTQG_MinhChung_UuTien.split("#");
                        if (ArrGTUT.length > 0) {
                            $('#div_mc_giayto_uutien').append('- Giấy tờ ưu tiên: ');
                            for (i = 0; i < ArrGTUT.length; i++) {
                                if (ArrGTUT[i].length > 0) {
                                    var str_a = ` <a href="#$" class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"  onclick="showimg('${ArrGTUT[i]}',5,${data.Dkxt_KQTQG_ID} )">Tệp ${i + 1}</a> `;
                                    $('#div_mc_giayto_uutien').append(str_a);
                                }
                            }
                            $('#div_mc_giayto_uutien').show();
                        }
                        else {
                            $('#div_mc_giayto_uutien').hide();
                        }
                    }

                    if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 0) {
                        $('#div_daco_mc_lephi').hide();

                        $('#div_chuaco_mc_lephi').show();
                        $('#div_mc_lephi').hide();
                    }
                    else {
                        $('#div_daco_mc_lephi').show();
                        $('#div_chuaco_mc_lephi').hide();

                        $('#txt_SoThamChieu_KinhPhi').text('- Số tham chiếu chuyển khoản: ' + data.Dkxt_KQTQG_KinhPhi_SoThamChieu)
                        if (data.Dkxt_KQTQG_KinhPhi_TepMinhChung) {
                            const ArrKinhPhi = data.Dkxt_KQTQG_KinhPhi_TepMinhChung.split("#");
                            if (ArrKinhPhi.length > 0) {
                                $('#div_mc_lephi').append('- Nộp lệ phí: ');
                                for (i = 0; i < ArrKinhPhi.length; i++) {
                                    if (ArrKinhPhi[i].length > 0) {
                                        var str_a = ` <a href="#$" class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"  onclick="showimg('${ArrKinhPhi[i]}',6,${data.Dkxt_KQTQG_ID} )">Tệp ${i + 1}</a> `;
                                        $('#div_mc_lephi').append(str_a);
                                    }
                                }
                                $('#div_mc_lephi').show();
                            }
                            else {
                                $('#div_mc_lephi').hide();
                            }
                        }
                    }

                    /*TrangThaiHoSo*/
                    if (data.Dkxt_KQTQG_TrangThai_HoSo == 0) {
                        $('#ThongBao_TrangThaiHoSo').empty();
                        $('#ThongBao_TrangThaiHoSo').append(`<span>- Trạng thái hồ sơ: Chưa kiểm tra</span>`);
                        $('#radioHoSoDayDu').removeAttr('checked', 'checked');
                        $('#radioHoSoThieu').removeAttr('checked', 'checked');
                        $('#Dkxt_ThongBaoKiemDuyet_HoSo').val('');
                    }

                    if (data.Dkxt_KQTQG_TrangThai_HoSo == 1) {
                        $('#ThongBao_TrangThaiHoSo').empty();
                        $('#ThongBao_TrangThaiHoSo').append(`<span>- Trạng thái hồ sơ: Đã kiểm tra, hồ sơ có sai sót</span>`);
                        $('#radioHoSoDayDu').removeAttr('checked', 'checked');
                        $('#radioHoSoThieu').attr('checked', 'checked');
                        $('#Dkxt_ThongBaoKiemDuyet_HoSo').val(data.Dkxt_ThongBaoKiemDuyet_HoSo);
                    }

                    if (data.Dkxt_KQTQG_TrangThai_HoSo == 2) {
                        $('#ThongBao_TrangThaiHoSo').empty();
                        $('#ThongBao_TrangThaiHoSo').append(`<span>- Trạng thái hồ sơ: Thí sinh đã sửa, Chưa kiểm tra</span>`);
                        $('#radioHoSoDayDu').removeAttr('checked', 'checked');
                        $('#radioHoSoThieu').removeAttr('checked', 'checked');
                        $('#Dkxt_ThongBaoKiemDuyet_HoSo').val('');
                    }

                    if (data.Dkxt_KQTQG_TrangThai_HoSo == 9) {
                        $('#ThongBao_TrangThaiHoSo').empty();
                        $('#ThongBao_TrangThaiHoSo').append(`<span>- Trạng thái hồ sơ: Đã kiểm tra, hồ sơ đúng, đủ</span>`);
                        $('#radioHoSoDayDu').attr('checked', 'checked');
                        $('#radioHoSoThieu').removeAttr('checked', 'checked');
                        $('#Dkxt_ThongBaoKiemDuyet_HoSo').val(data.Dkxt_ThongBaoKiemDuyet_HoSo);

                    }
                    /*   Trang Thai Kinh Phi*/
                    if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 0) {
                        $('#ThongBao_TrangThaiKinhPhi').empty();
                        $('#ThongBao_TrangThaiKinhPhi').append(`<span>- Trạng thái nộp kinh phí: Chưa có tệp minh chứng</span>`);
                    }

                    if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 1) {
                        $('#ThongBao_TrangThaiKinhPhi').empty();
                        $('#ThongBao_TrangThaiKinhPhi').append(`<span>- Trạng thái nộp kinh phí: Đã nộp minh chứng, Chưa kiểm tra</span>`);

                        $('#radioThongtinLePhiDung').removeAttr('checked', 'checked');
                        $('#radioThongtinLePhiSai').removeAttr('checked', 'checked');
                    }

                    if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 2) {
                        $('#ThongBao_TrangThaiKinhPhi').empty();
                        $('#ThongBao_TrangThaiKinhPhi').append(`<span>- Trạng thái nộp kinh phí: Đã kiểm tra minh chứng, có sai sót</span>`);

                        $('#radioThongtinLePhiDung').removeAttr('checked', 'checked');
                        $('#radioThongtinLePhiSai').attr('checked', 'checked');

                    }

                    if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 3) {
                        $('#ThongBao_TrangThaiKinhPhi').empty();
                        $('#ThongBao_TrangThaiKinhPhi').append(`<span>- Trạng thái nộp kinh phí: Thí sinh đã sửa, Chưa kiểm tra</span>`);

                        $('#radioThongtinLePhiDung').removeAttr('checked', 'checked');
                        $('#radioThongtinLePhiSai').removeAttr('checked', 'checked');
                    }
                    if (data.Dkxt_KQTQG_TrangThai_KinhPhi == 9) {
                        $('#ThongBao_TrangThaiKinhPhi').empty();
                        $('#ThongBao_TrangThaiKinhPhi').append(`<span>- Trạng thái nộp kinh phí: Đã kiểm tra, Đúng, đủ</span>`);

                        $('#radioThongtinLePhiDung').attr('checked', 'checked');
                        $('#radioThongtinLePhiSai').removeAttr('checked', 'checked');
                    }
                }
            },
            error: function (errormessage) {
                console.log(errormessage.error);
            }
        });
    }
</script>
