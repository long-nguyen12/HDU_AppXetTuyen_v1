<!-- Thêm thư viện -->
@model PagedList.IPagedList<HDU_AppXetTuyen.Models.DangKyXetTuyen>
@using PagedList.Mvc;
<!-- Kết thúc-->
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <h1 class="page-header-title mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        Đăng ký xét tuyển
                    </h1>
                </div>
                <div class="col-12 col-xl-auto mb-3">
                    @*<a class="btn btn-sm btn-light text-primary" href="@Url.Action("Create","Nganhs")">
                            <i class="me-1" data-feather="user-plus"></i>
                            Thêm mới
                        </a>*@
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid px-4">
    <div class="card">
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>
                        Đợt xét tuyển
                    </th>
                    <th>
                        Họ  tên
                    </th>
                    <th>
                        Đối tượng
                    </th>

                    <th>
                        Khu vực
                    </th>
                    <th>
                        Mã ngành
                    </th>
                    <th>
                        Phương thức xét tuyển
                    </th>

                    <th>
                        Tổ hợp môn
                    </th>

                    <th>
                        Nguyện vọng
                    </th>
                    <th>
                        Tổng điểm 3 môn xét tuyển
                    </th>
                    <th>
                        Tổng điểm + điểm ưu tiên
                    </th>
                    <th>
                       Trạng thái
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DotXetTuyen.Dxt_Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThiSinhDangKy.ThiSinh_HoLot) @Html.DisplayFor(modelItem => item.ThiSinhDangKy.ThiSinh_Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoiTuong.DoiTuong_Ten)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.KhuVuc.KhuVuc_Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nganh.Nganh_MaNganh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhuongThucXetTuyen.Ptxt_TenPhuongThuc)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.ToHopMon.Thm_MaToHop)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Dkxt_NguyenVong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dkxt_Diem_Tong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dkxt_Diem_Tong_Full)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dkxt_TrangThai)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.Dkxt_ID }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.Dkxt_ID }) |
                            @Html.ActionLink("Xoá", "Delete", new { id = item.Dkxt_ID })
                        </td>
                    </tr>
                }

            </table>
            <!-- Thêm mã phân trang -->
          
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page }))
            <!-- Kết thúc -->
        </div>
    </div>
</div>