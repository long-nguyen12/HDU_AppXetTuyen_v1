@model HDU_AppXetTuyen.Models.NganhMaster

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin_Master.cshtml";
}
<style>
    .form-select, .form-control, .btn {
        border-radius: 3px;
    }
</style>
<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-2">
    <div class="container-fluid px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-1">
                    <div class="page-header-title  mb-2">
                        <div class="page-header-icon"><i data-feather="list"></i></div>
                        <span>Quản lý thông tin Ngành</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid px-12">
        <div class="card card-header-actions">
            <div class="card-header">
                <span>Thêm mới ngành</span>
                <a class="btn-close" aria-label="Close" href="@Url.Action("Index","NganhMasters")"></a>
            </div>
            <div class="card-body">
                <div class="row g-1">
                    <div class="col-lg-3 col-12">
                        <label class="control-label col-md-12">Mã ngành</label>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Nganh_Mt_MaNganh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nganh_Mt_MaNganh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-12">

                        <label class="control-label col-md-12">Tên ngành</label>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Nganh_Mt_TenNganh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nganh_Mt_TenNganh, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="col-lg-3 col-12">
                        <label class="control-label col-md-12">Định hướng NC</label>
                        <div class="col-md-12">
                            <select class="form-select" id="Nganh_Mt_NghienCuu_Ten" name="Nganh_Mt_NghienCuu_Ten">
                                <option value="0">Chọn định hướng nc...</option>
                                <option value="1">Ứng dụng</option>
                                <option value="2">Nghiên cứu</option>
                                <option value="3">Ứng dụng, Nghiên cứu</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-12">
                        <label class="control-label col-md-12">Chọn khoa quản lý</label>
                        <div class="col-md-12">
                            @Html.DropDownList("Khoa_ID", null, htmlAttributes: new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.Nganh_Mt_TenKhoa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-9 col-12">
                        <label class="control-label col-md-12">Ghi chú</label>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Nganh_Mt_GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nganh_Mt_GhiChu, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-12">
                        <label style="visibility:hidden; color:white">a</label>
                        <div class="col-md-12 text-nowrap">
                            <center>
                                <input class="btn btn-outline-success" type="submit" value="Đồng ý" />
                                @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn btn-outline-danger", @style = "white-space:nowrap" })
                            </center>                          
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                </div>
               
            </div>
        </div>
    </div>
}

